    "require": {
        "php": ">=7.1 || ^8.0"
    },
    "require-dev" : {
        "ext-dom": "*",
        "ext-mbstring": "*",
        "ext-tidy": "*"
    },
    "autoload": {
        "classmap": ["src/"],
        "exclude-from-classmap": [ "/test" ]
    },
    "scripts": {
      "test":  "@php tests/all_tests.php"
    },
    "scripts-descriptions": {
      "test": "Run all tests"
